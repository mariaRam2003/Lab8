<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main.xml"
    app:startDestination="@id/wellcome">

    <fragment
        android:id="@+id/mainFragment"
        android:name="gt.uvg.pokelist.view.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <argument
            android:name="PokemonsAmount"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="gt.uvg.pokelist.view.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="FrontShiny"
            app:argType="string" />
        <argument
            android:name="BackShiny"
            app:argType="string" />
        <argument
            android:name="Front"
            app:argType="string" />
        <argument
            android:name="Back"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/wellcome"
        android:name="gt.uvg.pokelist.view.Wellcome"
        android:label="Wellcome" >
        <action
            android:id="@+id/action_wellcome_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>